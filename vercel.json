{
  "version": 2,
  "name": "ai-livestream-slicer",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_OPENAI_API_KEY": "@vite_openai_api_key",
    "VITE_YOUTUBE_API_KEY": "@vite_youtube_api_key",
    "VITE_TWITCH_CLIENT_ID": "@vite_twitch_client_id"
  },
  "build": {
    "env": {
      "VITE_OPENAI_API_KEY": "@vite_openai_api_key",
      "VITE_YOUTUBE_API_KEY": "@vite_youtube_api_key",
      "VITE_TWITCH_CLIENT_ID": "@vite_twitch_client_id"
    }
  }
}